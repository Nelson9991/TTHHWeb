@using TTHHWeb.Client.Auth;
@inherits LayoutComponentBase
@inject ILoginService LoginService

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
  <MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    <MudText Typo="Typo.h5" Class="ml-3 mr-4">TTHH</MudText>
    <AuthorizeView>
      <Authorized>
        <MudText Typo="Typo.h6">
          Compañia - @context.User.Claims.FirstOrDefault(x => x.Type == "NombreCompañia")!.Value
        </MudText>
      </Authorized>
    </AuthorizeView>
    <MudSpacer />
    <AuthorizeView>
      <Authorized>
        <MudText>Hola, @context.User.Identity.Name</MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Logout"
                       Color="Color.Inherit"
                       Edge="Edge.End"
                       OnClick="@(() => LoginService.Logout())" />
      </Authorized>
    </AuthorizeView>
  </MudAppBar>
  <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
    <NavMenu />
  </MudDrawer>
  <MudMainContent Style="">
    @Body
  </MudMainContent>
</MudLayout>

@code {
  bool _drawerOpen = true;

  void DrawerToggle()
  {
    _drawerOpen = !_drawerOpen;
  }
}
